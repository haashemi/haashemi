---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="flex flex-col gap-5">
  <div
    class="flex w-full items-center gap-2 bg-zinc-950 py-2"
  >
    <h2 class="text-center text-xl font-light text-zinc-500">{title}</h2>
    <span class="h-[1px] flex-1 bg-zinc-700"></span>
  </div>

  <slot />
</div>
