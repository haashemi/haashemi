---
interface Props {
  url: string;
  title: string;
  employmentType: string;
  company: string;
  startDate: Date;
  endDate?: Date;
}

const { company, title, employmentType, startDate, endDate, url } = Astro.props;
---

<a
  class="group relative flex-1 border-l-2 border-zinc-800 px-4 py-2 transition-colors duration-300 hover:border-zinc-500"
  href={`/exp/${url}`}
>
  <span
    class="absolute top-0 left-0 size-full bg-gradient-to-r from-zinc-900 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
  ></span>

  <div class="relative flex flex-col gap-2">
    <h2>{company}</h2>

    <div class="flex flex-col">
      <p class="text-sm text-zinc-500">
        {title} - {employmentType}
      </p>

      <p class="text-sm text-zinc-500">
        {startDate.toLocaleString("en", { year: "numeric", month: "short" })}
        {" - "}
        {endDate ? endDate.toLocaleString("en", { year: "numeric", month: "short" }) : "Present"}
      </p>
    </div>
  </div>
</a>
