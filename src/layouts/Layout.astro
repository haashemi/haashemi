---
import "@hx/styles/global.css";
import Head from "@hx/components/Head.astro";
import Header from "@hx/components/Header.astro";
import { AstroFont } from "astro-font";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <slot name="head">
      <Head title={`Ali Hashemi`} description={"Ali Hashemi's personal website"} />
    </slot>

    <AstroFont
      config={[
        {
          src: [],
          name: "Space Grotesk Variable",
          googleFontsURL: "https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap",
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
        },
      ]}
    />
  </head>

  <body class="relative mx-auto w-full max-w-prose font-sans antialiased dark:bg-zinc-950">
    <Header />

    <main>
      <slot />
    </main>

    <!-- Bottom shadow -->
    <div class="h-20"></div>
    <div class="fixed top-0 left-0 h-10 w-full bg-gradient-to-b from-zinc-950 to-transparent"></div>
    <div class="fixed bottom-0 left-0 h-10 w-full bg-gradient-to-t from-zinc-950 to-transparent"></div>
  </body>
</html>

<style>
  html {
    color-scheme: dark;
  }
</style>
